{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2020",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./app/frontend/*"],
      "~/*": ["./app/frontend/*"]
    },
    "types": ["vite/client"]
  },
  "exclude": ["**/dist", "**/node_modules", "**/test"]
}
